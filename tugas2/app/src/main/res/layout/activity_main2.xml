<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity"
    android:orientation="vertical"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="318dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="360dp"
            android:scaleType="fitXY"
            android:src="@drawable/image2"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:background="#000000"
                android:gravity="center_horizontal"
                android:text="Kenyataan"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold">
                ></TextView>

            <TextView
                android:layout_width="190dp"
                android:layout_height="340dp"
                android:lineSpacingExtra="10dp"
                android:text="Yang jauh bakal kalah sama yang dekat, yang dekat bakal kalah sama
                              yang selalu ada, yang selalu ada bakal kalah sama yang diprioritasin,
                              terdengar kejam kan? tapi itulah kenyataan"
                android:textColor="#ffffff"
                android:textSize="8pt"></TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:text="Ikhlas"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="#000000"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="190dp"
                android:layout_height="320dp"
                android:textSize="7pt"
                android:lineSpacingExtra="7dp"
                android:textColor="#ffffff"
                android:text="Kapan kita harus ikhlas dalam merelakan pasangan? Ketika kita sadar bahwa kita sudah tidak menjadi alasannya untuk bahagia, ikhlaskan, lepaskan, biarkan, dengarkan,
                rangkul saat patah">
                >
            </TextView>

        </LinearLayout>

        <ImageView
            android:layout_width="185dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/image1"
            android:layout_marginLeft="15sp">
        </ImageView>

    </LinearLayout>

</LinearLayout>